<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textSize="60sp"/>

    <LinearLayout
        android:id="@+id/lgroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num7"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/num8"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/num9"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/op1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lgroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="40sp"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/num6"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/op2"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lgroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/num3"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/op3"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lgroup5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/num0"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"/>


        <Button
            android:id="@+id/op4"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="40sp"/>

        <Button
            android:id="@+id/op5"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lgroup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/reset"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textSize="40sp"/>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/op6"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="40sp"/>

    </LinearLayout>


</LinearLayout>